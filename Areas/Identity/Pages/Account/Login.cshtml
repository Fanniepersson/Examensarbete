@page
@model LoginModel

<title>Fannie Events</title>

<div class="container" style="background-color: #F3EFE8; font-family: Montserrat;">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="col-md-5">
                <section>
                    <form id="account" method="post">
                        <h5 class="mt-3 mb-3">Welcome to Fannie Events</h5>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mb-2">
                            <div class="col-12">
                                <a>Email</a>
                            </div>
                            <input asp-for="Input.Email" autocomplete="username" aria-required="true" style=" border: #F3EFE8;
                     height: 2.5rem;
                     font-size: 13px;" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-4">
                            <div class="col-12">
                                <a>Password</a>
                            </div>
                            <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" style=" border: #F3EFE8;
                     height: 2.5rem;
                     font-size: 13px;" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <button id="login-submit" type="submit" style="background-color: #CCC5B5;  border: none;
                        padding-left: 1rem;
                        padding-right: 1rem;
                        padding-top: 0.5rem;
                       padding-bottom: 0.5rem;
                       box-shadow: 0.5px 0.5px 5px #514D4C;
                         color: black;">
                                Log in
                            </button>
                        </div>
                        <div>
                            <p>
                                <a id="forgot-password" style="color:black;" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" style="color:black;" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" style="color:black;" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>

        </div>
        <div class="col-md-6 col-md-offset-2">
            <section>
                <h4>Use another service to log in.</h4>
                <hr />
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                                        <div>
                                            <p>
                                                There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                                    article
                                                    about setting up this ASP.NET application to support logging in via external services
                                                </a>.
                                            </p>
                                        </div>
                    }
                    else
                    {
                                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                            <div>
                                                <p>
                                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" style="background-color: #CCC5B5; border:none; color:black;  box-shadow: 0.5px 0.5px 5px #514D4C;" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                    }
                                                </p>
                                            </div>
                                        </form>
                    }
                }
            </section>
        </div>
    </div>
</div>

